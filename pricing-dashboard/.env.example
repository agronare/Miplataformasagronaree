# Copy this file to .env and set your Gemini API key there.
# Do NOT commit the real .env to git.
GEMINI_API_KEY=your_real_api_key_here

# Optional settings
# METRICS_FILE: path where metrics are persisted (JSON Lines). Default: metrics.jsonl
METRICS_FILE=metrics.jsonl

# METRICS_SECRET: optional secret to protect /api/metrics in production
METRICS_SECRET=replace_with_a_strong_secret

# PORT: port where the server listens (default 3001)
PORT=3001
